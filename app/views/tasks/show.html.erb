<h1><%= @task.title %></h1>
<p><%= @task.details %></p>
<div>
  <% if @task.completed == true %>
    <input type=checkbox name="<%= @task.title %>" id="<%= @task.title %>" checked>
    <label for="<%= @task.title %>">This task is completed!</label>
  <% else %>
    <input type=checkbox name="<%= @task.title %>" id="<%= @task.title %>">
    <label for="<%= @task.title %>">This task is not done.</label>
  <% end %>
</div>
<%= link_to "Delete",
  task_path(@task),
  data: {turbo_method: :delete, turbo_confirm: "Are you sure?"}
%>
<%= link_to "Back to list", tasks_path %>
